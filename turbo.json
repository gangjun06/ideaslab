{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		".env"
	],
	"tasks": {
		"build": {
			"dependsOn": [
				"^build",
				"^@ideaslab/db#db:generate"
			],
			"outputs": [
				".next/**",
				"dist/**"
			],
			"env": [
				"PORT",
				"DATABASE_URL",
				"SHADOW_DATABASE_URL",
				"JWT_SECRET"
			]
		},
		"@ideaslab/web#build": {
			"dependsOn": [
				"^build",
				"^build:types"
			],
			"outputs": [
				"dist/**",
				"build/**"
			]
		},
		"lint": {},
		"dev": {
			"dependsOn": [
				"^@ideaslab/db#db:generate"
			],
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": true
		},
		"db:push": {
			"cache": false
		},
		"db:migrate:dev": {
			"cache": false
		},
		"@ideaslab/server#generate": {
			"cache": false
		},
		"build:types": {},
		"@ideaslab/server#build:types": {
			"dependsOn": [
				"^@ideaslab/db#db:generate"
			]
		}
	}
}