{
	"name": "@ideaslab/server",
	"version": "1.0.0",
	"license": "AGPL",
	"files": [
		"src",
		"scripts"
	],
	"scripts": {
		"start": "node ./dist",
		"dev": "yarn generate && concurrently \"node ./scripts/esbuild.dev.js\" \"nodemon --watch .dev/index.js .dev/index.js\"",
		"register": "yarn generate && nodemon --ext ts -r tsconfig-paths/register --loader ts-node/esm --experimental-specifier-resolution node src --register",
		"generate": "node scripts/generator.js",
		"build": "yarn generate && node ./scripts/esbuild.js",
		"lint": "TIMING=1 eslint \"src/**/*.ts\" --fix"
	},
	"dependencies": {
		"@trpc/server": "^10.5.0",
		"axios": "^1.2.1",
		"discord.js": "^14.7.1",
		"dotenv": "^16.0.3",
		"form-data": "^4.0.0",
		"ioredis": "^5.2.4",
		"iron-session": "^6.3.1",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2",
		"superjson": "^1.12.0",
		"uuid": "^9.0.0",
		"winston": "^3.8.2"
	},
	"devDependencies": {
		"@ideaslab/db": "*",
		"@ideaslab/eslint-config": "*",
		"@ideaslab/validator": "*",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "^18.11.15",
		"@types/uuid": "^9.0.0",
		"chokidar": "^3.5.3",
		"concurrently": "^7.6.0",
		"esbuild": "^0.16.14",
		"fast-glob": "^3.2.12",
		"nodemon": "^2.0.20",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.2",
		"tsconfig-paths": "^4.1.1",
		"typescript": "^4.9.4"
	}
}
