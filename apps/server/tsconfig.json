{
	"extends": "@ideaslab/tsconfig/node16.json",
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
		".dev",
		".turbo",
	],
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"composite": true,
		"paths": {
			"~/*": [
				"./src/*"
			]
		}
	},
}