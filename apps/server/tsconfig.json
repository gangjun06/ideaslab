{
	"extends": "@ideaslab/tsconfig/node20.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", ".dev", ".turbo", "../../node_modules"],
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": "./src",
		"paths": {
			"~/*": ["./*"]
		},
		"moduleDetection": "force",
		"skipLibCheck": true
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
