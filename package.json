{
  "name": "ideaslab",
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate-dev": "turbo run db:migrate-dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.8.1",
    "turbo": "^1.6.3"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}
