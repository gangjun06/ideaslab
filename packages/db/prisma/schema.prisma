generator client {
        provider = "prisma-client-js"
}

datasource db {
        provider = "postgresql"
        url      = env("DATABASE_URL")
}

model User {
        discordId    String     @id
        name         String
        avatar       String
        introduce    String
        handle       String     @unique
        links        Json[]
        registerFrom String?
        createdAt    DateTime   @default(now())
        updatedAt    DateTime   @updatedAt
        likes        Like[]
        posts        Post[]
        VoiceLog     VoiceLog[]
}

model Category {
        id             Int      @id @default(autoincrement())
        name           String
        discordChannel String
        defaultOrder   Int      @default(0)
        createdAt      DateTime @default(now())
        updateAt       DateTime @updatedAt
        Posts          Post[]
}

model Role {
        id           Int    @id @default(autoincrement())
        defaultOrder Int    @default(0)
        name         String
        discordRole  String @unique
}

model Tag {
        id        Int      @id @default(autoincrement())
        name      String   @unique
        createdAt DateTime @default(now())
        posts     Post[]   @relation("PostToTag")
}

model Post {
        id          Int      @id @default(autoincrement())
        name        String
        attachments String[]
        title       String
        content     String
        categoryId  Int
        channelId   String
        authorId    String
        createdAt   DateTime @default(now())
        updateAt    DateTime @updatedAt
        Like        Like[]
        author      User     @relation(fields: [authorId], references: [discordId])
        category    Category @relation(fields: [categoryId], references: [id])
        tags        Tag[]    @relation("PostToTag")
}

model Like {
        id     Int    @id @default(autoincrement())
        userId String
        postId Int
        post   Post   @relation(fields: [postId], references: [id])
        user   User   @relation(fields: [userId], references: [discordId])
}

model VoiceLog {
        time          DateTime @default(now()) @db.Timestamptz(6)
        value         Int
        userDiscordId String
        user          User     @relation(fields: [userDiscordId], references: [discordId])

        @@unique([userDiscordId, time])
        @@index([time(sort: Desc)])
}

model Setting {
        key   String @id
        value String
}
